                            <th>Preview</th>
                            <th>Description</th>
                            <th>Price</th>
                            <th>Quantity</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% items.forEach(function(item){ %>
                            <tr>
                                <th scope="row">
                                    <%= item.item_name%>
